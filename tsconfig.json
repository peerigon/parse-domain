{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "build", "lists"]
}